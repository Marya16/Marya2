<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marya2.MainPage">

     <Grid> 
     <Grid.RowDefinitions>
       <RowDefinition Height="*"/>
       <RowDefinition Height="*"/>
       <RowDefinition Height="*"/>
     </Grid.RowDefinitions> 
     <Grid.ColumnDefinitions>
       <ColumnDefinition Width="*"/>
       <ColumnDefinition Width="*"/>
       <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

  <Image Source="dialimpo.png"
         Aspect="AspectFill"
         Grid.RowSpan="3"
         Grid.ColumnSpan="3"/>

  <Frame BackgroundColor="#55000000"
         CornerRadius="25"
         Margin="5,5"
         VerticalOptions="Start"
         HorizontalOptions="Center"
         Grid.Row="0">

  <Label Text="32°C"
         TextColor="Black"
         LineHeight="3"
         FontSize="18"
         FontFamily="Bold"/> 
  </Frame>
   </Grid>
</ContentPage>
